<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomSheetContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet"
    android:orientation="vertical"
    android:elevation="5dp"
    >


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"

            >

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


            </androidx.core.widget.NestedScrollView>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="15dp"
                    >

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imageView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:rotation="90"
                        app:srcCompat="@drawable/ic_arrow_left"
                        />

                    <TextView
                        android:id="@+id/moreinfobottom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="더보기"
                        android:textAlignment="center"
                        android:textColor="@color/colorBlack"
                        android:textSize="15sp" />

                </LinearLayout>
                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    app:srcCompat="@drawable/ill"
                    android:padding="10dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    />

                <TextView
                    android:id="@+id/treeAlertText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textColor="@color/colorPrimary"
                    android:text="일월저수지"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="36sp"
                    android:paddingTop="20dp"
                    />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/mapbottomnameask"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:padding="15dp"
                        android:textAlignment="textStart"
                        android:text="지역 이름:"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/mapbottomname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:padding="15dp"
                        android:textSize="25sp"
                        android:text="일월저수지"
                        android:textAlignment="textEnd"
                        android:textColor="@color/colorBlack"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/mapbottomlocationask"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:padding="15dp"
                        android:textAlignment="textStart"
                        android:text="위치:"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/mapbottomlocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:padding="15dp"
                        android:textSize="23sp"
                        android:text="N 37.3°, E 126.9°"
                        android:textAlignment="textEnd"
                        android:textColor="@color/colorBlack"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/mapbottomtreenumask"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:padding="15dp"
                        android:textAlignment="textStart"
                        android:text="나무 그루: "
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/mapbottomtreenum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:padding="15dp"
                        android:textSize="23sp"
                        android:text="8 그루"
                        android:textAlignment="textEnd"
                        android:textColor="@color/colorBlack"
                        />

                </LinearLayout>
                <TextView
                    android:id="@+id/mapbottomtreespecask"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:padding="15dp"
                    android:textAlignment="textStart"
                    android:text="수종 : "
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/mapbottomtreespecask1"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:padding="15dp"
                        android:textAlignment="textStart"
                        android:text="은행나무"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/mapbottomtreespec1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp" android:padding="15dp"
                        android:textSize="23sp"
                        android:text="32%"
                        android:textAlignment="textEnd"
                        android:textColor="@color/colorBlack"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/mapbottomtreespecask2"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:padding="15dp"
                        android:textAlignment="textStart"
                        android:text="벚꽃나무"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/mapbottomtreespec2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp" android:padding="15dp"
                        android:textSize="23sp"
                        android:text="32%"
                        android:textAlignment="textEnd"
                        android:textColor="@color/colorBlack"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/mapbottomtreespecask3"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:padding="15dp"
                        android:textAlignment="textStart"
                        android:text="기타"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/mapbottomtreespec3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp" android:padding="15dp"
                        android:textSize="23sp"
                        android:text="32%"
                        android:textAlignment="textEnd"
                        android:textColor="@color/colorBlack"
                        />

                </LinearLayout>
                <TextView
                    android:id="@+id/mapbottomtreedbhask"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:padding="15dp"
                    android:textAlignment="textStart"
                    android:text="DBH : "
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/mapbottomtreedbhask1"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:padding="15dp"
                        android:textAlignment="textStart"
                        android:text="소경목"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/mapbottomtreedbh1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp" android:padding="15dp"
                        android:textSize="23sp"
                        android:text="32%"
                        android:textAlignment="textEnd"
                        android:textColor="@color/colorBlack"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/mapbottomtreedbhask2"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:padding="15dp"
                        android:textAlignment="textStart"
                        android:text="중경목"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/mapbottomtreedbh2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp" android:padding="15dp"
                        android:textSize="23sp"
                        android:text="32%"
                        android:textAlignment="textEnd"
                        android:textColor="@color/colorBlack"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/mapbottomtreedbhask3"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:padding="15dp"
                        android:textAlignment="textStart"
                        android:text="대경목"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/mapbottomtreedbh3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp" android:padding="15dp"
                        android:textSize="23sp"
                        android:text="32%"
                        android:textAlignment="textEnd"
                        android:textColor="@color/colorBlack"
                        />

                </LinearLayout>
                <TextView
                    android:id="@+id/mapbottomtreehask"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:padding="15dp"
                    android:textAlignment="textStart"
                    android:text="높이 : "
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/mapbottomtreehask1"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:padding="15dp"
                        android:textAlignment="textStart"
                        android:text="10m+"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/mapbottomtreeh1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp" android:padding="15dp"
                        android:textSize="23sp"
                        android:text="32%"
                        android:textAlignment="textEnd"
                        android:textColor="@color/colorBlack"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/mapbottomtreehask2"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:padding="15dp"
                        android:textAlignment="textStart"
                        android:text="5~10m"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/mapbottomtreeh2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp" android:padding="15dp"
                        android:textSize="23sp"
                        android:text="32%"
                        android:textAlignment="textEnd"
                        android:textColor="@color/colorBlack"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/mapbottomtreehask3"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:padding="15dp"
                        android:textAlignment="textStart"
                        android:text="~5m"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/mapbottomtreeh3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp" android:padding="15dp"
                        android:textSize="23sp"
                        android:text="32%"
                        android:textAlignment="textEnd"
                        android:textColor="@color/colorBlack"
                        />

                </LinearLayout>
                <TextView
                    android:id="@+id/mapbottomtreefinalask"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:padding="15dp"
                    android:textAlignment="textStart"
                    android:text="최종통계: "
                    android:textSize="18sp" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>





</LinearLayout>